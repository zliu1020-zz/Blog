<div class="post-content">
    <div class="ui grid">
        <div class="four wide column">
            <a class="avatar avatar-link"
               href="/articles?author=<%= article.author._id %>"
               data-title="<%= article.author.name %> | <%= ({m: 'Male', f: 'Female', x: 'Secrect'})[article.author.gender] %>"
               data-content="<%= article.author.bio %>">
                <img class="avatar" src="/img/<%= article.author.avatar %>">
            </a>
        </div>

        <div class="eight wide column">
            <div class="ui segment">
                <h3><a href="/articles/<%= article._id %>"><%= article.title %></a></h3>
                <pre><%- article.content %></pre>
                <div>
                    <span class="tag"><%= article.created_at %></span>
                    <span class="tag right">
            <span>View(<%= article.pv %>)</span>
            <span>Comments(<%= article.commentsCount || 0 %>)</span>

                        <% if (user && article.author._id && user._id.toString() === article.author._id.toString()) { %>
                        <div class="ui inline dropdown">
                <div class="text"></div>
                <i class="dropdown icon"></i>
                <div class="menu">
                  <div class="item"><a href="/articles/<%= article._id %>/edit">Edit</a></div>
                  <div class="item"><a href="/articles/<%= article._id %>/delete">Delete</a></div>
                </div>
              </div>
                        <% } %>

                    </span>
                </div>
            </div>
        </div>
    </div>
</div>